#import <UIKit/UIKit.h>

@interface UIColor (HYCategory)

#pragma mark - 标准颜色
/**
 *  超能健身房主色调-红色
 *
 *  @return 超能健身房红色
 */
+ (UIColor *)gym_redColor;

/**
 *  超能健身房主辅色调-橙色
 *
 *  @return 超能健身房橙色
 */
+ (UIColor *)gym_orangeColor;

/**
 *  超能健身房次要辅色调-蓝色
 *
 *  @return 超能健身房蓝色
 */
+ (UIColor *)gym_bludColor;

/**
 *  超能健身房按钮颜色-绿色
 *
 *  @return 超能健身房绿色
 */
+ (UIColor *)gym_greenColor;

/**
 *  超能健身房按钮颜色-绿色运动
 *
 *  @return 超能健身房绿色运动
 */
+ (UIColor *)gym_greenColor1;

/**
 *  超能健身房按钮颜色-紫色睡眠
 *
 *  @return 超能健身紫色
 */
+ (UIColor *)gym_purpleColor;

/**
 *  超能健身房少量重要字体颜色，如标题字体颜色
 *
 *  @return 浅黑色字体颜色
 */
+ (UIColor *)gym_textDarkerColor;

/**
 *  超能健身房正文字体颜色，如段落文字、次标题、正文文字等
 *
 *  @return 深灰色字体颜色
 */
+ (UIColor *)gym_textColor;

/**
 *  超能健身房辅助字体颜色，如提示、时间等不是很重昂要的字体颜色
 *
 *  @return 浅灰色字体颜色
 */
+ (UIColor *)gym_textLighterColor;

/**
 *  超能健身房分割线颜色，如列表分割线、标签描边、边框描边等
 *
 *  @return 浅灰色线条颜色
 */
+ (UIColor *)gym_lineColor;

/**
 *  超能健身房次要分割线颜色，如图表的线条颜色
 *
 *  @return 浅灰色线条颜色
 */
+ (UIColor *)gym_lineLighterColor;

/**
 *  超能健身房内容背景色，如分割模块的背景颜色、内容模板的底色
 *
 *  @return 浅灰色背景色
 */
+ (UIColor *)gym_bgColor;


#pragma mark - 按钮
/**
 *  超能健身房  红色按钮  正常状态颜色
 *
 *  @return 按钮正常状态背景颜色
 */
+ (UIColor *)gym_redButtonNormalBgColor;

/**
 *  超能健身房  红色按钮  选中状态颜色
 *
 *  @return 按钮选中状态背景颜色
 */
+ (UIColor *)gym_redButtonSelectedBgColor;

/**
 *  超能健身房  橙色按钮  正常状态颜色
 *
 *  @return 按钮正常状态背景颜色
 */
+ (UIColor *)gym_orangeButtonNormalBgColor;

/**
 *  超能健身房  橙色按钮  选中状态颜色
 *
 *  @return 按钮选中状态背景颜色
 */
+ (UIColor *)gym_orangeButtonSelectedBgColor;


/**
 *  超能健身房  按钮  禁用状态颜色
 *
 *  @return 按钮禁用状态颜色
 */
+ (UIColor *)gym_buttonDisableBgColor;

@end
